FROM mysql:lts-oraclelinux9

# Set environment variables for MySQL
ENV MYSQL_ROOT_PASSWORD=root
ENV MYSQL_DATABASE=my_db
ENV MYSQL_USER=dev_user
ENV MYSQL_PASSWORD=dev_password

# Set timezone
ENV TZ=Asia/Kolkata

# Install additional utilities if needed
RUN microdnf install -y \
    git \
    && microdnf clean all

# Copy initialization scripts (if any)
# COPY ./init-scripts/ /docker-entrypoint-initdb.d/

# Expose MySQL port
EXPOSE 3306

# The mysql image already has a CMD, so we don't need to specify it
# CMD ["mysqld"]
